{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "removeComments": true,
    "noEmit": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./frontend/src/*"],
      "@backend/*": ["./backend/src/*"]
    },
    "types": ["jest", "node"]
  },
  "include": [
    "tests/**/*",
    "jest.config.ts",
    "backend/src/**/*",
    "frontend/src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage"
  ]
} 